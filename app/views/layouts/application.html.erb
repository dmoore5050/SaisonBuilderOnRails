<!DOCTYPE html>
<html>
<head>
  <title>Sbonrails</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="nav_wrapper" class="clearfix">

    <%= render_crumbs %>

    <p class="notice center_nav"><%= notice %></p>
    <p class="alert center_nav"><%= alert %></p>

    <% if current_user %>
      <span class="right_nav" ><%= current_user.email %></span>
    <% end %>

    <% unless current_user %>
      <%= link_to "Log In", new_user_session_path, :class => "right_nav" %>
    <% end %>

    <%= link_to "Ingredients", ingredients_path, :class => "right_nav"  %>

    <%= link_to "Recipes", recipes_path, :class => "right_nav" %>
  </div>



<%= yield %>

</body>
</html>
