%span.ingredient_name_block #{@i}. #{ingredient.name.titleize}:
= ingredient.description
- if current_user && current_user.id == ingredient.user_id
  = form_for ingredient, html: { :class => 'align_right inline_form' } do |f|
    = button_to 'Delete', ingredient_path(ingredient), { method: :delete, :class => "delete_button red", :confirm => "Are you sure?" }