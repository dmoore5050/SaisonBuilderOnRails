<h1 class="page_head">Build Saison</h1>

<div class='wrapper'>
  <%= form_for @recipe do |f| %>
    <%= f.label :name, 'Name:' %>
    <%= f.text_field :name, placeholder: "ex: My New Recipe" %><br>
    <%= f.label :description, 'Description:' %>
    <%= f.text_field :description, placeholder: "ex: Tastes like burning." %><br>
    <%= f.label :batch_size, 'Batch size:' %>
    <%= f.text_field :batch_size, placeholder: "ex: 5 gallons" %><br>
    <%= f.label :mash_length, 'Mash:' %>
    <%= f.text_field :mash_length, placeholder: "ex: 75 mins" %>
    <%= f.label :mash_temp, '@' %>
    <%= f.text_field :mash_temp, placeholder: "ex: 149F" %><br>
    <%= f.label :boil_length, 'Boil length:' %>
    <%= f.text_field :boil_length, placeholder: "ex: 90 mins" %><br>
    <%= f.submit 'Add Recipe' %>
  <% end %>
</div>